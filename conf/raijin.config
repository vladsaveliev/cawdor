params {
  runTime       = 48.h
  singleCPUMem  = 7.GB // for processes that are using more memory but a single CPU only
  cpusOnNode    = 28
}

process {
  max_cpus = params.cpusOnNode
  max_memory = 94.GB
  max_time = 240.h

  cpus = params.cpusOnNode
  memory = 20.GB
  time = 48.h
  clusterOptions = {"-l jobfs=100GB"}
  executor = 'pbspro'
  queue = 'normalbw'

  errorStrategy = {task.exitStatus == 143 ? 'retry' : 'terminate'}
  maxErrors = '-1'
  maxRetries = 3

  withName:MapReads {
    time = { params.runTime * task.attempt }
    cpus = { check_max( params.cpusOnNode, 'cpus' ) }
    memory = { check_max( 80.GB, 'memory' ) }
  }
  withName:MergeBams {
    cpus = { check_max( 4, 'cpus') }
    time = { check_max( 5.h * task.attempt, 'time' ) }
    memory = { params.singleCPUMem * task.attempt }
  }
  withName:MarkDuplicates {
    cpus = { check_max( 8, 'cpus' ) }
    memory = { check_max( 8.GB * task.attempt, 'memory' ) }
  }
  withName:RunQualimap {
    cpus = 14
  }
  withName:RunBcftoolsStats {
    cpus = 1
  }
  withName:RunFastQC {
    cpus = 2 // FastQC is only capable of running one thread per fastq file.
    errorStrategy = { task.exitStatus == 143 ? 'retry' : 'ignore' }
  }
  withName:RunFreeBayes {
    cpus = 1
    memory = {params.singleCPUMem * task.attempt}
    time = {params.runTime * task.attempt}
  }
  withName:RunHaplotypecaller {
    cpus = 1
    // Increase memory quadratically
    memory = {params.singleCPUMem * task.attempt * task.attempt}
    time = {params.runTime * task.attempt}
  }
  withName:RunGenotypeGVCFs {
    cpus = 1
    memory = {params.singleCPUMem}
  }
  withName:RunMultiQC {
    errorStrategy = { task.exitStatus == 143 ? 'retry' : 'ignore' }
  }
  withName:RunMutect2 {
    cpus = 1
    memory = {params.singleCPUMem * task.attempt}
    time = {params.runTime * task.attempt}
  }
  withName:RunSamtoolsStats {
    cpus = 1
    time = {params.runTime * task.attempt}
  }
  withName:RunSingleStrelka {
    time = {params.runTime * task.attempt}
    conda = "/g/data3/gx8/extras/vlad/miniconda/envs/py2"
  }
  withName:RunStrelka {
    time = {params.runTime * task.attempt}
    conda = "/g/data3/gx8/extras/vlad/miniconda/envs/py2"
  }
  withName:RunManta {
    conda = "/g/data3/gx8/extras/vlad/miniconda/envs/py2"
  }
  withName:RunVEP {
    errorStrategy = { task.exitStatus == 143 ? 'retry' : 'ignore' }
  }
}
